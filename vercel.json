{
  "version": 2,
  "builds": [
    {
      "src": "dist/**",
      "use": "@vercel/static"
    },
    {
      "src": "dist/**/server/*.mjs",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(assets|.*\\.(js|css|json|ico|png|jpg|svg|webp))",
      "dest": "/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/api"
    }
  ]
}
